@model CareWeb.Models.Login

@{
    Layout = "~/Views/Shared/_InitLayout.cshtml";
}

@{
    ViewBag.Title = "Login";
}@section leftMenu
{
<div>
    @Html.Partial("BasicMenuView")
</div>
    }
<div id="contentpane2">
    @using (Html.BeginForm(new { ReturnUrl = Request.QueryString["ReturnUrl"] }))
    {
        @Html.AntiForgeryToken()
        <div class="Container">
            <div class="login">
                <div align="center" class="logintitlebox">
                    ADMIN LOGIN
                </div>

                <table style="margin-top:50px;margin-left:260px">
                    <tr>
                        <td>
                            <div class="ui-button-text-only">
                                @Html.TextBoxFor(m => m.UserName, new { placeholder = "Phone" })
                            </div>
                        </td>
                        <td>
                            @Html.ValidationMessageFor(m => m.UserName)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })
                        </td>
                        <td>
                            @Html.ValidationMessageFor(m => m.Password)
                        </td>
                    </tr>
                    <tr><td>
                            <p class="submit">
                                <input class="loginbutton" type="submit" value="Login" />
                            </p></td></tr>
                </table>

            </div>
        </div>
        <div class="validationsummary">
            @Html.ValidationSummary(true)
        </div>
    }
</div>
