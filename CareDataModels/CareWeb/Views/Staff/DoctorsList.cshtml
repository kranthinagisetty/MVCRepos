@model IEnumerable<CareDataModels.Models.Doctor>

@{
    ViewBag.Title = "Doctors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section leftMenu
{
<div>
    @*@Html.Partial("DoctorsListMenu", null, ViewData);*@   
       @Html.Partial("StaffMenuView")
</div>
}


<div class="banner_section">
    <img src="~/Images/banner_img1.jpg" alt="" />
    <div class="page_direction">
        <a href="@Url.Action("AppointmentsList", "Staff")" title="Home" style="text-decoration:none"> Home ></a> Doctors
    </div>
</div>

<div class="content_wrapper fancy_fields">
    <div class="row">

        <h2>Doctors List</h2>

        @using (Ajax.BeginForm("DoctorsList", "Staff", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "peoplemenu" }))
        {

            <div class="col int_min_wid">
                @Html.TextBox("SearchBox")
            </div>
            <div class="col">
                <input type="submit" value="Search">
            </div>
            <div class="col f_right">
                <input type="button" value="Add Doctor" onclick="location.href='@Url.Action("CreateDoctor", "Staff")'" />
            </div>
            <div class="doc_grid_con">

                <div class="row hr_row">
                    <div class="col">Name</div>
                    <div class="col">Specialization</div>
                    <div class="col">Mobile</div>
                </div>
                <h3>@ViewBag.Norecords</h3>
                @foreach (var item in Model)
                {

                    <div class="row content_row">
                        <div class="col txt_blue">
                            <a href="@Url.Action("DoctorInfo", "Staff", new { id = item.DoctorID })" title="Doctor Info" style="text-decoration:none">
                                @Html.DisplayFor(modelItem => item.FullName)
                            </a>
                        </div>
                        <div class="col">@Html.DisplayFor(modelItem => item.Specialization)</div>
                        <div class="col">@Html.DisplayFor(modelItem => item.Phone)</div>
                    </div>
                }

            </div>

        }
    </div>
</div>

